<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Hotel.Web</title>
</head>
<body>
    <header>
        @await Html.PartialAsync("~/Views/Shared/_HeaderPartial.cshtml")
    </header>
    @RenderBody()

    <footer>
        @await Html.PartialAsync("~/Views/Shared/_FooterPartial.cshtml")
    </footer>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
