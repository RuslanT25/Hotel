@model List<Testimonial>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/AdminLayout/_AdminLayout.cshtml";
}

<table class="table table-bordered">
    <tr>
        <th>#</th>
        <th>Testimonial Image</th>
        <th>Testimonial Name</th>
        <th>Testimonial Title</th>
        <th>Delete</th>
        <th>Update</th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <th>@item.Id</th>
            <th>@item.Image</th>
            <th>@item.Name</th>
            <th>@item.Title</th>
            <th><a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger">Delete</a></th>
            <th><a asp-action="Update" asp-route-id="@item.Id" class="btn btn-warning">Update</a></th>
        </tr>
    }
</table>

<a href="/Testimonial/Add/" class="btn btn-info">New Testimonial</a>

