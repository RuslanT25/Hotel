
@model StaffPostDTO
@{
    ViewData["Title"] = "Add";
    Layout = "~/Areas/Admin/Views/AdminLayout/_AdminLayout.cshtml";
}

<form method="post">
    <label>Staff member Name</label>
    <input type="text" asp-for="Name" class="form-control" />
    <span asp-validation-for="Name" class="text-danger"></span>
    <br/>
    <label>Staff member Title</label>
    <input type="text" asp-for="Title" class="form-control" />
    <span asp-validation-for="Title" class="text-danger"></span>
    <br/>
    <label>Staff member Number</label>
    <input type="text" asp-for="Number" class="form-control" />
    <span asp-validation-for="Number" class="text-danger"></span>
    <br />
    <label>Social media 1</label>
    <input type="text" asp-for="SocialMedia1" class="form-control" />
    <span asp-validation-for="SocialMedia1" class="text-danger"></span>
    <br />
    <label>Social media 2</label>
    <input type="text" asp-for="SocialMedia2" class="form-control" />
    <span asp-validation-for="SocialMedia2" class="text-danger"></span>
    <br />
    <label>Social media 3</label>
    <input type="text" asp-for="SocialMedia3" class="form-control" />
    <span asp-validation-for="SocialMedia3" class="text-danger"></span>
    <br />
    <button class="btn btn-primary">Add Staff</button>
</form>

