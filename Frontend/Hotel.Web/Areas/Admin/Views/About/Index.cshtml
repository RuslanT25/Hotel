@model List<About>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/Admin/Views/AdminLayout/_AdminLayout.cshtml";
}

<table class="table table-bordered">
    <tr>
        <th>#</th>
        <th>Title1</th>
        <th>Title2</th>
        <th>RoomCount</th>
        <th>StaffCount</th>
        <th>CustomerCount</th>
        <th>Update</th>
        <th>Delete</th>
        <th>Destroy</th>
        <th>Details</th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <th>@item.Id</th>
            <th>@item.Title1</th>
            <th>@item.Title2</th>
            <th>@item.RoomCount</th>
            <th>@item.StaffCount</th>
            <th>@item.CustomerCount</th>
            <th><a asp-action="Update" asp-route-id="@item.Id" class="btn btn-info">Update</a></th>
            <th><a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-warning">Delete</a></th>
            <th><a asp-action="Destroy" asp-route-id="@item.Id" class="btn btn-danger">Destroy</a></th>
            <th><a href="#" class="btn btn-dark">Details</a></th>
        </tr>
    }
</table>

@if (!Model.Any())
{
    <a href="/admin/about/add/" class="btn btn-info">New</a>
}
else
{
    <a href="/admin/About/Update/" class="btn btn-info">Update</a>
}
