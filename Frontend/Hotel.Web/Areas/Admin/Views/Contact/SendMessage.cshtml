@model SendMessagePostDTO
@{
    ViewData["Title"] = "SendMessage";
    Layout = "~/Areas/Admin/Views/AdminLayout/_AdminLayout.cshtml";
}

<div class="container-fluid">
    <div class="row">
        <div class="col-lg-12">
            <div class="card">
                <div class="card-body">
                    <div class="email-left-box">
                        <a href="email-compose.html" class="btn btn-primary btn-block">Compose</a>
                        @await Html.PartialAsync("_ContactNavBarPartial", (ContactNavBarVM)ViewBag.NavBarModel);

                        @await Html.PartialAsync("_ContactCategoriesPartial");
                    </div>
                    <div class="email-right-box">
                        @await Html.PartialAsync("_SendMessageToolBarPartial");

                        <div class="compose-content mt-5">
                            <form method="post" asp-controller="Contact" asp-action="SendMessage">
                                <div class="form-group">
                                    <input type="text" class="form-control bg-transparent" asp-for="RecieverEmail" placeholder=" To">
                                </div>
                                <div class="form-group">
                                    <input type="text" class="form-control bg-transparent" asp-for="RecieverName" placeholder=" Name">
                                </div>
                                <div class="form-group">
                                    <input type="text" class="form-control bg-transparent" asp-for="Subject" placeholder=" Subject">
                                </div>
                                <div class="form-group">
                                    <textarea class="textarea_editor form-control bg-light" rows="15" asp-for="Message" placeholder="Enter text ..."></textarea>
                                </div>

                                @* <h5 class="m-b-20"><i class="fa fa-paperclip m-r-5 f-s-18"></i> Attatchment</h5>
                                <form action="#" class="dropzone">
                                <div class="form-group">
                                <div class="fallback">
                                <input class="l-border-1" name="file" type="file" multiple="multiple">
                                </div>
                                </div>
                                </form> *@

                                <div class="text-left m-t-15">
                                    <button class="btn btn-primary m-b-30 m-t-15 f-s-14 p-l-20 p-r-20 m-r-10" type="submit"><i class="fa fa-paper-plane m-r-5"></i> Send</button>
                                    <button class="btn btn-dark m-b-30 m-t-15 f-s-14 p-l-20 p-r-20" type="reset"><i class="ti-close m-r-5 f-s-12"></i> Discard</button>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
