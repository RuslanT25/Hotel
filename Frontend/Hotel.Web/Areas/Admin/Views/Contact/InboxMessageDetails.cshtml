@model ContactGetDTO
@{
    ViewData["Title"] = "InboxMessageDetails";
    Layout = "~/Areas/Admin/Views/AdminLayout/_AdminLayout.cshtml";
}

<div class="email-left-box">
    <a href="/admin/contact/sendmessage/" class="btn btn-primary btn-block">Compose</a>
    @await Html.PartialAsync("_ContactNavBarPartial");

    @await Html.PartialAsync("_ContactCategoriesPartial");
</div>

<div class="email-right-box">
    <div role="toolbar" class="toolbar">
        <div class="btn-group">
            <button aria-expanded="false" class="btn btn-dark" type="button">
                Sent message <span class="caret m-l-5"></span>
            </button>
        </div>
    </div>

    <div class="read-content">
        <div class="media pt-5">
            <div class="media-body">
                <h4 class="m-b-3">@Model.Name</h4>
                <p class="m-b-2">@(((DateTime)Model.Date).ToString("dd-MMM-yyyy"))</p>
            </div>

        </div>
        <hr>
        <div class="media mb-4 mt-1">
            <div class="media-body">
                <span class="float-right">@(((DateTime)Model.Date).ToString("HH:mm"))</span>
                <h4 class="m-0 text-primary">@Model.Subject</h4><small class="text-muted">@Model.Email</small>
            </div>
        </div>
        <p>@Model.Message</p>
